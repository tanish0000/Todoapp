<%- include("./partials/header")  %>
<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/">TodoList App</a>
</nav>

<div class="container mt-5">
    <form action="/add/todo" method="POST" class="d-flex">
        <input type="text" name="todo" class="form-control" placeholder="Enter Todo">
        <input type="submit" value="Add Todo" class="btn btn-md btn-primary mx-2">
    </form>
    
    
    <ul class="list-group my-5">
        <% todo.forEach(todos => { %>
            <li class="list-group-item"><a href="/todoL/<%= todos._id %>"><%= todos.todo %></a> <a href="/delete/todo/<%= todos._id %>"
                class="btn btn-danger btn-sm" style = "margin-left: 50rem; float-right;">Delete </a></li>
                <input type="text" style="display: none;" value="<%= todos._id %>" name="forredirect">

        <% }) %>

    </ul>
</div>







<%- include("./partials/footer")  %>